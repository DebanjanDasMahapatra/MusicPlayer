<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:umanoDragView="@id/dragView"
    android:id="@+id/slide_view"
    android:gravity="bottom"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/app_name"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        app:titleTextColor="@android:color/white"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
        android:padding="5dp"
        android:textAlignment="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/toolbar_shadow"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:scrollbarSize="10dp"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@drawable/scroll_bar_thumb"
        android:id="@+id/songList">

    </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="false"
        android:clickable="true"
        android:id="@+id/dragView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/collapsed_view">

            <TextView
                android:id="@+id/c_song_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignEnd="@+id/c_previous"
                android:layout_marginEnd="60dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/c_song_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/c_song_title"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="-25dp"
                android:singleLine="true"
                android:textColor="@android:color/darker_gray"
                android:layout_marginStart="10dp"
                android:layout_alignEnd="@+id/c_previous"
                android:layout_marginEnd="60dp"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:src="@drawable/skip_previous_black"
                android:contentDescription="@string/app_name"
                android:id="@+id/c_previous"
                android:layout_gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="130dp"
                android:onClick="onClick"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/play"
                android:id="@+id/c_play_or_pause"
                android:background="@drawable/controls_big"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="70dp"
                android:onClick="onClick"/>

            <ImageView
                android:id="@+id/c_next"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/app_name"
                android:onClick="onClick"
                android:padding="2dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/skip_next_black" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/expanded_view">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/app_name"
                android:background="@color/colorPrimary"
                app:titleTextColor="@android:color/white"
                android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
                android:padding="5dp"
                android:textAlignment="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/toolbar_shadow"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/songTitle"
            android:text="Song Title"
            android:textAlignment="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"/>

        <TextView
            android:id="@+id/songArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Song Astist"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray"
            android:singleLine="true"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/songImage"
            android:layout_height="330dp"
            android:layout_width="330dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/app_name"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/mp_logo"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/replay"
            android:contentDescription="@string/app_name"
            android:id="@+id/repeat"
            android:layout_marginStart="20dp"
            android:background="@drawable/controls"
            android:onClick="onClick"/>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:progressDrawable="@drawable/seek_bar"
            android:thumb="@drawable/seek_thumb" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/currentDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:text="curr"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/endDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:text="end"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:src="@drawable/skip_previous_black"
                android:contentDescription="@string/app_name"
                android:id="@+id/previous"
                android:layout_marginEnd="40dp"
                android:layout_gravity="center_vertical"
                android:onClick="onClick"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="10dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/play"
                android:id="@+id/play_or_pause"
                android:layout_marginEnd="10dp"
                android:background="@drawable/controls_big"
                android:layout_marginStart="10dp"
                android:onClick="onClick"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/skip_next_black"
                android:id="@+id/next"
                android:layout_marginStart="40dp"
                android:layout_gravity="center_vertical"
                android:onClick="onClick"/>

        </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>