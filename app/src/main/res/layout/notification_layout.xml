<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    
    <TextView
        android:id="@+id/n_song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/n_previous"
        android:layout_marginEnd="60dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/n_song_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/n_song_title"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="-25dp"
        android:singleLine="true"
        android:textColor="@android:color/darker_gray"
        android:layout_marginStart="10dp"
        android:layout_alignEnd="@+id/n_previous"
        android:layout_marginEnd="60dp"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:src="@drawable/skip_previous_black"
        android:contentDescription="@string/app_name"
        android:id="@+id/n_previous"
        android:layout_gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="130dp"
        android:onClick="onClick"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/play"
        android:id="@+id/n_play_or_pause"
        android:background="@drawable/controls_big"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="70dp"
        android:onClick="onClick"/>

    <ImageView
        android:id="@+id/n_next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/app_name"
        android:onClick="onClick"
        android:padding="2dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/skip_next_black" />
</RelativeLayout>